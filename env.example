# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (Local PostgreSQL via Docker)
# Make sure Docker container is running: docker-compose up -d
DATABASE_URL="postgresql://postgres:password@localhost:5433/covenant_noc?schema=public"

# Client URL (CORS)
# Set this to the URL you use to access the application
# Examples:
#   - http://localhost:3000 (local development)
#   - http://10.1.0.20:3000 (production server IP)
#   - http://noc.yourcompany.com:3000 (production domain)
CLIENT_URL=http://localhost:3000

# JWT Secrets (REQUIRED - generate secure random strings)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your_access_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_chars

# JWT Expiry
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Meraki API Key (Optional - has default fallback)
MERAKI_API_KEY=your_meraki_api_key_here

